@import '../../template/calendar/index.wxss';

.calendar-wrap {
	padding: 0 0rpx;
	height: 100vh;
}

.top-handle {
  color: #E76C66;
}

.weeks {
	opacity: 0.7;
  color: #E76C66;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.v_user {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.userAvatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-left: 60rpx;
  overflow: hidden;
  display: inline-block;
}

.tittle {
  color: #E76C66;
  display: inline-block;
  height: 45rpx;
  line-height: 45rpx;
  font-size: 42rpx;
  margin-left: 20rpx;
}

.work {
  background-color: #ff629a;
}

.holiday {
  background-color: #E5A132;
}

.night {
  background-color: #40454E;
}

.day-choosed-color {
  width: 80%;
  height: 80%;
  font-size: 42rpx;
  font-weight: 400;
  border-radius: 50%;
}

.diswork {
  background-color: #ff629a;
  opacity: 0.5;
}

.disholiday {
  background-color: #E5A132;
  opacity: 0.5;
}

.disnight {
  background-color: #40454E;
  opacity: 0.5;
}

.v_btn {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  margin-top: 20rpx;
}

.btn {
  width: 120rpx;
  height: 60rpx;
  display: inline-block;
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
}

.btn_left {
  background-color: #E5A132;
  color: #FFF;
}

.btn_right {
  background-color: #ff629a;
  color: #FFF;
}

.btn_mid {
  background-color: #E76C66;
  color: #FFF;
}

.v_msg {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  margin-top: 0rpx;
  background: #E76C66;
  color: #fff;
  height: 120rpx;
  line-height: 80rpx;
}

.v_date {
  background-color: #E76C66;
  margin-top: 40rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  color: #fff;
  padding-left: 20rpx;
  padding-top: 5rpx;
}
